{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "NexusInstallation",
  "required": [
    "installationKey",
    "installationName",
    "baseUrl",
    "clientId",
    "installationStatus"
  ],
  "properties": {
    "installationKey": {
      "type": "string"
    },
    "installationName": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string"
    },
    "clientId": {
      "type": "string"
    },
    "installationStatus": {
      "enum": [
        "online",
        "offline"
      ]
    },
    "realm": {
      "type": "string"
    }
  }
}