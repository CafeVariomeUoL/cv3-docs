    "operationId": "getLegacyNexusInsatallations",
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../components/schemas/nexus_installation.json"
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Nexus",
      "Node"
    ],
    "summary": "Create a new nexus installation",
    "operationId": "createLegacyNexusInstallations",
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": [
              "installationName",
              "baseURL",
              "email"
            ],
            "properties": {
              "installationName": {
                "type": "string"
              },
              "baseURL": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "realm": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/nexus_installation.json"
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized access, token required",
        "content": {
          "application/x-www-form-urlencoded": {
