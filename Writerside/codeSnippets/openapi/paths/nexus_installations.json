        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "503": {
        "description": "Service is under maintenance or KeyCloak/Vault is not available",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
